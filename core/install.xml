<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>

<!-- 
    Installation file for JStyx software
-->

<installation version="1.0">

    <!-- 
        The info section.
        The meaning of the tags should be natural ...
    -->
    <info>
        <appname>JStyx</appname>
        <appversion>0.10</appversion>
        <authors>
            <author name="Jon Blower" email="jdb@mail.nerc-essc.ac.uk"/>
        </authors>
        <url>http://jstyx.sf.net/</url>
    </info>
    
    <!-- 
        The gui preferences indication.
        Sets the installer window to 640x480. It will not be able to change the size.
    -->
    <guiprefs width="640" height="480" resizable="no"/>
    
    <!-- 
        The locale section.
    -->
    <locale>
        <langpack iso3="eng"/>
    </locale>
	
	<!-- For Windows shortcuts -->
    <native type="izpack" name="ShellLink.dll"/>
    
    <!-- 
        The resources section.
        The ids must be these ones if you want to use the LicencePanel and/or the InfoPanel.
    -->
    <resources>
        <res id="LicencePanel.licence" src="LICENSE.txt"/>
        <res id="InfoPanel.info" src="README.txt"/>
        <!-- <res id="Unix_shortcutSpec.xml" src="${maven.izpack.build.shortcut.unix.file}"/> -->
        <res id="shortcutSpec.xml" src="Win_shortcutSpec.xml"/>
    </resources>
    
    <!-- 
        The panels section.
        We indicate here which panels we want to use. The order will be respected.
    -->
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/> 
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
		<!-- Only create shortcuts on Windows for the moment -->
        <panel classname="ShortcutPanel" os="windows"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>The core libraries and their dependencies, plus scripts to launch utilities</description>
            <fileset dir="lib" includes="*.jar" targetdir="$INSTALL_PATH/lib"/>
            <fileset dir="lib" includes="*.txt" targetdir="$INSTALL_PATH/lib"/>
            <file src="target/jstyx-0.10.jar" targetdir="$INSTALL_PATH/target"/>
            <file src="LICENSE.txt" targetdir="$INSTALL_PATH"/>
            <fileset dir="bin" includes="*.bat" excludes="SGSExplorer.bat GridServices.bat" targetdir="$INSTALL_PATH/bin" os="windows"/>
            <fileset dir="bin" includes="*.sh" targetdir="$INSTALL_PATH/bin" os="unix"/>
			<file src="conf/log4j.properties" targetdir="$INSTALL_PATH/conf"/>
			<file src="src/docs/JStyx website.url" targetdir="$INSTALL_PATH/docs" os="windows"/>
        </pack>
        <pack name="Docs" required="no">
            <description>The documentation</description>
			<!-- TODO: should we add the docs to src/docs, or move the docs from src/ in the first place? -->
            <fileset dir="src/docs" targetdir="$INSTALL_PATH/docs"/> <!-- Recursive adding -->
        </pack>
		<pack name="SGS client" required="no">
			<description>Scripts to launch Styx Grid Service client programs (e.g. SGSExplorer)</description>
            <file src="bin/SGSExplorer.bat" targetdir="$INSTALL_PATH/bin"/>
        </pack>
		<pack name="SGS server" required="no">
			<description>Scripts and sample configuration files for launching Styx Grid Service server</description>
            <file src="bin/GridServices.bat" targetdir="$INSTALL_PATH/bin"/>
			<file src="conf/SGSConfig.xml" targetdir="$INSTALL_PATH/conf"/>
			<file src="conf/SGSConfig.dtd" targetdir="$INSTALL_PATH/conf"/>
        </pack>
        <pack name="Sources" required="no">
            <description>The sources, plus build files for Ant, Maven and IzPack</description>
            <fileset dir="src/java" targetdir="$INSTALL_PATH/src/java"/>
            <file src="build.xml" targetdir="$INSTALL_PATH"/>
            <file src="install.xml" targetdir="$INSTALL_PATH"/>
            <file src="project.xml" targetdir="$INSTALL_PATH"/>
            <file src="project.properties" targetdir="$INSTALL_PATH"/>
        </pack>
    </packs>
    
</installation>
