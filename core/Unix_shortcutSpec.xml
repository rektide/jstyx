<?xml version="1.0" encoding="UTF-8"?>

<!-- Unix shortcuts for JStyx applications -->

<shortcuts>
    <programGroup defaultName="JStyx" location="applications"/>
	
    <shortcut
      name="SGS Explorer"
      programGroup="yes"
      desktop="no"
      applications="no"
      startMenu="yes"
      startup="no"
      target="$INSTALL_PATH/bin/SGSExplorer.sh"
      commandLine=""
      workingDirectory="$INSTALL_PATH/bin"
      description="Launches the SGSExplorer application"
      type="Application"
      iconIndex="0"
      iconFile=""
      initialState="noShow">
      <createForPack name="SGS client"/>
    </shortcut>
	
    <shortcut
      name="SGS server"
      programGroup="yes"
      desktop="no"
      applications="no"
      startMenu="yes"
      startup="no"
      target="$INSTALL_PATH/bin/GridServices.sh"
      commandLine=""
      workingDirectory="$INSTALL_PATH/bin"
      description="Launches the Styx Grid Services server"
      type="Application"
      iconIndex="0"
      iconFile=""
      initialState="normal">
      <createForPack name="SGS server"/>
    </shortcut>
	
    <shortcut
      name="JStyx website"
      programGroup="yes"
      desktop="no"
      applications="no"
      startMenu="yes"
      startup="no"
      target="konqueror"
      url="http://jstyx.sf.net"
      type="Link"
      commandLine=""
      description="Project website"
      workingDirectory=""
      iconIndex="0"
      iconFile="help"
      initialState="noShow">
    </shortcut>
	
    <shortcut
      name="Uninstall JStyx"
      programGroup="yes"
      desktop="no"
      applications="no"
      startMenu="no"
      startup="no"
      target="java"
      commandLine='-jar "$INSTALL_PATH/Uninstaller/uninstaller.jar"'
      workingDirectory=""
      description="Uninstall JStyx"
      type="Application"
      iconIndex="0"
      iconFile="trashcan_full"
      initialState="noShow">
    </shortcut>
	
</shortcuts>