<!DOCTYPE root SYSTEM "SGSconfig.dtd">

<root>

    <!-- Configuration of the server -->
    <serverConfig>
        <port>9092</port>
        <!-- TODO: will set SSL parameters in here (server cert location, cipher suites, client authentication, acceptable client certs, etc) -->
        <ssl activated="no">
            <keystore location="C:\bogus.cert"/>
        </ssl>
        <!-- TODO: will set proxy settings etc here -->
    </serverConfig>
    
    <!-- The Styx Grid Services that will appear under this server -->
    <!-- TODO: could define service data elements here -->
    <gridservices root="C:\StyxGridServices">
        <gridservice name="md5sum" command="python c:\md5lines.py" description="Calculates MD5 sum of each line of input">
            <param name="waittime" type="float" required="no" default="0" minValue="0"
                description="The time (in seconds) to wait between reading each line of input"/>
            <!-- <doc location="C:\install.log"/> Will appear as "install.log" in the namespace -->
            <doc location="C:\md5lines.py" name="source"/>
            <doc location="C:\j2sdk1.4.2_05\docs\api" name="javadoc"/>
            <serviceData>
                <serviceDataElement name="status" />
            </serviceData>
        </gridservice>
        <gridservice name="simple" command="python c:\simple.py" description="doesn't do much really" />
        <gridservice name="lbflow" command="c:\cygwin\home\jdb\lbflow-0.1\src\lbflow -i /home/jdb/lbflow-0.1/tests/test.sim"
            description="Lattice Boltzmann simulation"/>
    </gridservices>

</root>
