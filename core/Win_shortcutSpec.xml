<?xml version="1.0" encoding="UTF-8"?>

<!-- Windows shortcuts for JStyx applications -->

<shortcuts>
    <programGroup defaultName="JStyx" location="applications"/>
	
    <shortcut
      name="SGS Explorer"
      programGroup="yes"
      desktop="yes"
      applications="no"
      startMenu="no"
      startup="no"
      target="$INSTALL_PATH/bin/SGSExplorer.bat"
      commandLine=""
      workingDirectory="$INSTALL_PATH/bin"
      description="Launches the SGSExplorer application"
      iconIndex="0"
      iconFile=""
      initialState="noShow">
      <createForPack name="SGS client"/>
    </shortcut>
	
    <shortcut
      name="SGS server"
      programGroup="yes"
      desktop="yes"
      applications="no"
      startMenu="no"
      startup="no"
      target="$INSTALL_PATH/bin/GridServices.bat"
      commandLine=""
      workingDirectory="$INSTALL_PATH/bin"
      description="Launches the Styx Grid Services server"
      iconIndex="0"
      iconFile=""
      initialState="normal">
      <createForPack name="SGS server"/>
    </shortcut>
    
    <shortcut
      name="SGS server config"
      programGroup="yes"
      desktop="yes"
      applications="no"
      startMenu="no"
      startup="no"
      target="$INSTALL_PATH/conf/SGSconfig.xml"
      commandLine=""
      workingDirectory="$INSTALL_PATH/conf"
      description="Opens the SGS server configuration file"
      iconIndex="0"
      iconFile=""
      initialState="normal">
      <createForPack name="SGS server"/>
    </shortcut>
	
    <shortcut
      name="JStyx documentation"
      programGroup="yes"
      desktop="no"
      applications="no"
      startMenu="no"
      startup="no"
      target="$INSTALL_PATH/docs/jstyx.pdf"
      commandLine=""
      description="PDF of project website"
      workingDirectory=""
      iconIndex="0"
      iconFile=""
      initialState="normal">
    </shortcut>
	
    <shortcut
      name="JStyx website"
      programGroup="yes"
      desktop="no"
      applications="no"
      startMenu="no"
      startup="no"
      target="$INSTALL_PATH/docs/JStyx website.url"
      commandLine=""
      description="Project website"
      workingDirectory=""
      iconIndex="0"
      iconFile=""
      initialState="normal">
    </shortcut>
	
    <shortcut
      name="Uninstall JStyx"
      programGroup="yes"
      desktop="no"
      applications="no"
      startMenu="no"
      startup="no"
      target="javaw"
      commandLine='-jar "$INSTALL_PATH/Uninstaller/uninstaller.jar"'
      workingDirectory=""
      description="Uninstall JStyx"
      iconIndex="0"
      iconFile=""
      initialState="noShow">
    </shortcut>
	
</shortcuts>